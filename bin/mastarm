#!/usr/bin/env node

const program = require('commander')
const pkg = require('../package.json')

program
  .version(pkg.version)
  .command('build [entries...]', 'Bundle JavaScript & CSS')
  .command('deploy [entries...]', 'Bundle & Deploy JavaScript & CSS')
  .command('lint [paths...]', 'Lint JavaScript [& CSS coming soon!]')
  .command('serve [entries...]', 'Bundle & serve JavaScript & CSS')
  .parse(process.argv)
