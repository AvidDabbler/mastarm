#!/usr/bin/env node

var budo = require('budo')
var argv = require('minimist')(process.argv.slice(2))
var proxy = require('proxy-middleware')
var transform = require('../lib/transform')

var middleware = []
if (argv.proxy) {
  var proxyTo = argv.proxy
  proxyTo.route = '/api'
  middleware.push(proxy(proxyTo))
}

budo.cli([argv._[0] + ':assets/index.js'], {
  browserify: {debug: true, transform: transform(argv.config)},
  cors: true,
  middleware
})
