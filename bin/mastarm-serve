#!/usr/bin/env node

var budo = require('budo')
var httpProxy = require('http-proxy')
var loadConfig = require('../lib/load-config')
var argv = require('minimist')(process.argv.slice(2))
var pkg = require('../lib/pkg')
var transform = require('../lib/transform')

var config = loadConfig(process.cwd(), argv.config)
var entry = argv._[0] || config.settings.entry || pkg.main
var budoOpts = {
  browserify: {
    debug: true,
    transform: transform(config, true)
  },
  cors: true,
  middleware: [],
  pushstate: true
}
var proxyTarget = argv.proxy || config.settings.apiProxy
if (proxyTarget) {
  var proxyServer = httpProxy.createProxyServer({target: proxyTarget})
  budoOpts.middleware.push(function (req, res, next) {
    if (req.url.indexOf('/api') === 0) {
      req.url = req.url.slice(4)
      proxyServer.web(req, res)
    } else {
      next()
    }
  })
}

budo.cli([entry + ':assets/index.js'], budoOpts)
